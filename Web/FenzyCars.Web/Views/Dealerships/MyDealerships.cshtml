@model FenzyCars.Web.ViewModels.CarDealerships.DealershipsListViewModel

<div class="row container">
    @foreach (var dealership in Model.Dealerships)
    {
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="@dealership.Logo.RemoteImageUrl" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@dealership.Name</h5>
                <p class="card-text">@dealership.City</p>
                <a asp-action="ById" asp-route-dealershipid="@dealership.Id" class="btn btn-secondary btn-pill">Info and cars</a>
            </div>
        </div>
        <hr />
    }
</div>
<hr />

<nav aria-label="...">
    <ul class="pagination justify-content-center">
        @if (Model.PageNumber > 1)
        {
            <li class="page-item"><a class="page-link" asp-action="MyDealerships" asp-route-id="1">First</a></li>
        }
        <li class="page-item @if (!Model.HasPreviousPage) { <text>disabled</text> }">
            <a class="page-link" asp-action="MyDealerships" asp-route-id="@Model.PreviousPageNumber">Previous</a>
        </li>
        <li class="page-item active" aria-current="page">
            <span class="page-link">
                @Model.PageNumber
                <span class="sr-only">(current)</span>
            </span>
        </li>
        <li class="page-item @if (!Model.HasNextPage) { <text>disabled</text> }">
            <a class="page-link" asp-action="MyDealerships" asp-route-id="@Model.NextPageNumber">Next</a>
        </li>
        @if (Model.PageNumber < Model.PagesCount)
        {
            <li class="page-item"><a class="page-link" asp-action="MyDealerships" asp-route-id="@Model.PagesCount">Last</a></li>
        }
    </ul>
</nav>