@using FenzyCars.Web.ViewModels.Cars;

@{
    this.ViewData["Title"] = "Result";
}

@model ICollection<CarsByIdViewModel>

<h1>@this.ViewData["Title"]</h1>
<hr />

<ul class="list-unstyled">
    @foreach (var car in Model)
    {
        <li class="media">
            <img src="@car.Images.Select(x => x.RemoteImageUrl).FirstOrDefault()" width="250" class="mr-3 img-responsive">
            <div class="media-body">
                <h5 class="mt-0"><a asp-action="ById" asp-route-id="@car.Id">@string.Concat(car.Make, " ", car.Model)</a></h5>
                @car.Description
                <hr />
                Price: @car.Price
            </div>
        </li>
        <hr />
    }
</ul>

